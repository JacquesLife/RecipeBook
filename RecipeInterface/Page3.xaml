<Page x:Class="RecipeInterface.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:RecipeInterface"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3"
      Background="White">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Recipe Name:" Margin="0,0,5,5"/>
        <TextBox x:Name="RecipeNameTextBox" Grid.Row="0" Margin="100,0,5,5" Width="200"/>

        <TextBlock Grid.Row="1" Text="Number of Ingredients:" Margin="0,10,5,5"/>
        <TextBox x:Name="NumberOfIngredientsTextBox" Grid.Row="1" Margin="100,10,5,5" Width="200"/>

        <TextBlock Grid.Row="2" Text="Number of Steps:" Margin="0,10,5,5"/>
        <TextBox x:Name="NumberOfStepsTextBox" Grid.Row="2" Margin="100,10,5,5" Width="200"/>

        <Button Content="Next" Click="NextButton_Click" Grid.Row="3" Margin="0,20,0,0"/>
    </Grid>
</Page>
